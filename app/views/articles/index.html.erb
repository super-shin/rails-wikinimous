<nav class="navbar navbar-light bg-transparent sticky-top">
  <div class="container-fluid">
    <%= link_to 'Wikinimous', articles_path, class: 'primary-text' %>
    <%= link_to 'New Article', new_article_path, class: 'btn btn-outline-secondary' %>
  </div>
</nav>
<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <% @articles.each do |article| %>
        <% last_word = article.title.split.last %>
        <a href="<%= article_path(article) %>" class="text-decoration-none text-dark">
          <div class="card mb-3 bg-light">
            <img src="<%= Faker::LoremFlickr.image(size: '1920x1080', search_terms: [last_word]) %>" class="card-img-top img-fluid" alt="<%= last_word %>">
            <div class="card-body">
              <h5 class="card-title display-6"><%= article.title %></h5>
              <p class="card-text">"<%= truncate(article.content, length: 50) %>"</p>
              <p class="card-text mt-5 text-end"><small class="text-muted">Last updated <%= rand(0..99) %> days ago</small></p>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
